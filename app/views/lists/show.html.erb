<h1><%= @list.name %></h1>
<div class="container">
  <div class="row">
    <div class="col-sm">
      <div class="card" style="width: 18rem;">
        <% @list.bookmarks.each do |bookmark| %>
        <img class="card-img-top" src="<%= bookmark.movie.poster_url %>" alt="<% bookmark.movie.title %> picture">
        <div class="card-body">
          <h5 class="card-title"><%= bookmark.movie.title %> <%= bookmark.movie.rating %>&#11088;</h5>
          <p class="card-text"><%= bookmark.movie.overview %></p>
        </div>
        <div class="card-footer">
          <small class="text-muted">"<%= bookmark.comment %>"</small>
          <button class="btn btn-secondary"><%= link_to "Delete",bookmark_path(bookmark.id),data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %></button>

        </div>


        <% end %>

        <p><%= link_to "Add a movie" ,  new_list_bookmark_path(@list.id) %></p>
        <p><%= link_to "Back To List", root_path %></p>
      </div>
    </div>
  </div>
</div>
