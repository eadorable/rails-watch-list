
<div class="banner">
  <h1><%= @list.name %> (<%= @list.bookmarks.count %> <%= @list.bookmarks.count>1 ? "movies": "movie" %>)</h1>
  <p><%= link_to "Add a movie",  new_list_bookmark_path(@list.id) %></p>
  <p class="mt-3"><%= link_to "Back to lists", root_path %></p>
</div>

<div class="container">
  <div class="card-container mt-3">

  <% @list.bookmarks.each do |bookmark| %>
    <div class="card bookmark-card">
      <img src="<%= bookmark.movie.poster_url %>" alt="<%= bookmark.movie.title %>">
      <h3 class="card-text"><%= bookmark.movie.title %> <small><%= bookmark.movie.rating %><i class="fa-solid fa-star"></i></small></h3>
      <p class="card-overview"><%= bookmark.movie.overview %></p>
      <p class="comment-p">"<%= bookmark.comment %>"</p>
      <p class="delete-link"><%= link_to "Delete", bookmark_path(bookmark.id), data: { turbo_method: :delete, turbo_confirm: "Are you sure?" } %></p>
    </div>
  <% end %>

  </div>
</div>
